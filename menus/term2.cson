# 'context-menu':
#   '.overlayer':
#       'Open terminal here': 'term:open'

'menu': [
  'label': 'Packages'
  'submenu': [
    'label': 'Term 3'
    'submenu': [
      {'label': 'Open New Terminal in New Tab', 'command': 'term3:open'}
      {'label': 'Open New Terminal in Right Pane', 'command': 'term3:open-split-right'}
      {'label': 'Open New Terminal in Bottom Pane', 'command': 'term3:open-split-down'}
      {'label': 'Open New Terminal in Top Pane', 'command': 'term3:open-split-up'}
      {'label': 'Open New Terminal in Left Pane', 'command': 'term3:open-split-left'}
    ]
  ]
]
'context-menu':
  '.term': [
    {
      'label': 'Copy'
      'command': 'term3:copy'
    }
    {
      'label': 'Paste'
      'command': 'term3:paste'
    }
  ]

  '.overlayer': [
    {
      'label': 'Term3: Pipe selection to last Terminal session'
      'command': 'term3:pipe-selection'
    }
    {
      'label': 'Term3: Pipe file path to the Terminal session'
      'command': 'term3:pipe-path'
    }
  ]
